<Window x:Class="BookStoreGUI.DeleteUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete User Account" Height="200" Width="400">
    <Grid>
        <Label Content="Username:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20"/>
        <TextBox x:Name="usernameTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,15,0,0" Width="200"/>

        <Label Content="Password:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,50,0,0"/>
        <PasswordBox x:Name="passwordTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="100,50,0,0" Width="200"/>


        <Button Content="Ok" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="100,100,0,0" Click="okButton_Click"/>
        <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="70" Margin="230,100,0,0" Click="cancelButton_Click"/>

    </Grid>
</Window>
